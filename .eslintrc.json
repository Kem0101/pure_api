{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "space-before-function-paren": "off",
        "semi": "off",
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "none",
                "singleQuote": true,
                "spaceBeforeFunctionParen": true
            }
        ]
    }
}